<%- layout("layouts/boilerplate") %>

    <div class="d-flex flex-row justify-content-center align-items-center ">
        <div class="card my-5 shadow" style="width: 50rem;">
            <div class="card-body">
                <h1 class="text-center">
                    <%= foundStory.storyTitle %>
                </h1>

                <p>
                    <%= removeTag(foundStory.storyDescription) %>
                </p>
                <blockquote class="blockquote">
                    <span class="blockquote-footer text-danger">
                        Story By <%= foundStory.author.username %>
                    </span>
                </blockquote>
                <% if(currentLoggedInUser && foundStory.author.equals(currentLoggedInUser._id)) {%>
                    <div class="d-flex flex-row justify-content-between">
                        <a class="btn btn-primary" role="button" href="/story/<%= foundStory._id %>/edit ">Edit</a>
                        <form action="/story/<%= foundStory._id %>?_method=DELETE " method="POST">
                            <button class="btn btn-primary">DELETE</button>
                        </form>
                    </div>
                    <% } %>

            </div>
        </div>
    </div>